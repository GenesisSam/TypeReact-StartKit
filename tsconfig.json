{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "allowUnusedLabels": false,
    "allowJs": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": [
      "es6",
      "es2016",
      "dom",
      "esnext.intl",
      "es2017.intl",
      "es2018.intl"
    ],
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "common": [
        "./app/common"
      ],
      "common/*": [
        "./app/common/*"
      ],
      "app/common/*": [
        "./app/common/*"
      ]
    },
    "resolveJsonModule": true
  }
}
